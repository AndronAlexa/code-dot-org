{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "yarn start",
      "type": "shell",
      "command": "yarn start",
      "options": {
        "cwd": "${workspaceFolder}/apps",
        "statusbar": {
          "color" : "#19a05d",

        }
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
    },
    {
      "label": "dashboard-server",
      "type": "shell",
      "command": "bin/dashboard-server",
      "options": {
        "statusbar": {
          "color" : "#a0195f",
        }
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": [],
    },
    {
      "label": "rake build",
      "type": "shell",
      "command": "bundle exec rake build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
    },
    {
      "label": "yarn install",
      "type": "shell",
      "command": "yarn install",
      "options": {
        "cwd": "${workspaceFolder}/apps",
      }
    },
    {
      "label": "bundle install",
      "type": "shell",
      "command": "bundle install",
    },
    {
      "label": "rails db:migrate",
      "type": "shell",
      "command": "bundle exec rails db:migrate",
      "options": {
        "cwd": "${workspaceFolder}/dashboard",
      }
    },
  ]
}