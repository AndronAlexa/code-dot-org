  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Studio in Chrome",
      "url": "http://localhost-studio.code.org:3000/",
      "webRoot": "${workspaceFolder}/apps",
      "smartStep": true,
    },
    {
      "type": "msedge",
      "request": "launch",
      "name": "Debug Studio in Edge",
      "url": "http://localhost-studio.code.org:3000/",
      "webRoot": "${workspaceFolder}/apps",
      "smartStep": true,
    },
    // TODO: THESE ruby_lsp LAUNCHES ARE NOT CURRENTLY WORKING
    {
      "type": "ruby_lsp",
      "name": "Debug dashboard-server",
      "request": "launch",
      "program": "bin/rails server -p 3000",
    },
    {
      "type": "ruby_lsp",
      "request": "attach",
      "name": "Attach to existing dashboard-server",
    },
    {
      "type": "ruby_lsp",
      "request": "launch",
      "name": "Debug current ruby minitest",
      "program": "ruby -Itest ${relativeFile}"
    },
  ]
}
